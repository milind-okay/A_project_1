<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wordpress.milindkrohit.tttypingtest.scoreboard">
    <TextView
        android:id="@+id/scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scoreboard"
        android:textSize="30dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/points_text"
        android:layout_below="@+id/scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points"
        android:textSize="@dimen/scoreboard_text"
        android:textColor="@color/scoreboard_text"
        />
    <TextView
        android:id="@+id/mpoints"
        android:layout_below="@+id/scoreboard"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/scoreboard_text"
        android:layout_marginRight="@dimen/scoreboard_text_right"
        android:textColor="@color/scoreboard"
        android:text="0"/>

    <LinearLayout
        android:id="@+id/first"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@+id/points_text"
        android:weightSum="100"
        >
        <TextView
            android:id="@+id/mmaxscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:textColor="@color/scoreboard_text"
            android:text="Max Score :"/>
        <TextView
            android:id="@+id/mmaxchar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/scoreboard"
            android:text="0"/>
        <TextView
            android:id="@+id/maxscorelevel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="center"
            android:textColor="@color/scoreboard_text"
            android:text="at level "/>
        <TextView
            android:id="@+id/mmaxscorelevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:textColor="@color/scoreboard"
            android:gravity="center"
            android:textSize="18dp"
            android:text="0"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"

        >
        <RelativeLayout
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scoreboard_top"
            android:background="#000000"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="level"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="#FFFFFF"

            />
        <TextView
            android:id="@+id/level_score"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="#FFFFFF"
            android:text="Max Score"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level"
            android:background="#def0fb"
            >
    <TextView
        android:layout_marginLeft="@dimen/scoreboard_text_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="@dimen/scoreboard_text"
        android:textColor="@color/scoreboard_text"

        />
    <TextView
        android:id="@+id/level1_score"

        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/scoreboard_text"
        android:textColor="@color/scoreboard"
        android:text="0"
        android:layout_marginRight="@dimen/scoreboard_text_right"
       ></TextView>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level1"
            android:background="@color/scoreboard_even"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"

            />
        <TextView
            android:id="@+id/level2_score"

            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level2"
            android:background="@color/scoreboard_odd"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"

            />
        <TextView
            android:id="@+id/level3_score"

            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level3"
            android:background="@color/scoreboard_even"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"

            />
        <TextView
            android:id="@+id/level4_score"

            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level4"
            android:background="@color/scoreboard_odd"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"

            />
        <TextView
            android:id="@+id/level5_score"

            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level5"
            android:background="@color/scoreboard_even"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"
            android:layout_marginTop="@dimen/scoreboard_top"
            />
        <TextView
            android:id="@+id/level6_score"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/level7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scoreboard_top"
            android:layout_below="@+id/level6"
            android:background="@color/scoreboard_odd"
            >
        <TextView
            android:layout_marginLeft="@dimen/scoreboard_text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard_text"

            />
        <TextView
            android:id="@+id/level7_score"

            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/scoreboard_text"
            android:textColor="@color/scoreboard"
            android:text="0"
            android:layout_marginRight="@dimen/scoreboard_text_right"
            />
            </RelativeLayout>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_scoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
