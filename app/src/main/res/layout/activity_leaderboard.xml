<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wordpress.milindkrohit.tttypingtest.Leaderboard">
    <TextView
        android:id="@+id/heading_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LeaderBorad"
        android:textColor="#000000"
        android:textSize="@dimen/heading"/>
    <LinearLayout
        android:id="@+id/leaderboard"
        android:layout_below="@+id/heading_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="90"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_weight="20"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_weight="35"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:layout_weight="35"
            />



    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/leaderboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



    </ScrollView>

</RelativeLayout>
